<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.listapitest.CarListFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_car_list">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_homeScreen"
            app:destination="@id/homeScreen" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.listapitest.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.listapitest.HomeScreen"
        android:label="HomeScreen" >
        <action
            android:id="@+id/action_homeScreen_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_homeScreen_to_verhuurderScreen"
            app:destination="@id/verhuurderScreen" />
    </fragment>
    <fragment
        android:id="@+id/verhuurderScreen"
        android:name="com.example.listapitest.VerhuurderScreen"
        android:label="VerhuurderScreen" >
        <action
            android:id="@+id/action_verhuurderScreen_to_homeScreen"
            app:destination="@id/homeScreen" />
    </fragment>
</navigation>